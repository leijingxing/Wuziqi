<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghehua"
    tools:context="com.example.wuziqi.MainActivity" >

<com.example.wuziqi.WuziqiPanel 
    android:id="@+id/action_settings"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
    <Button
        android:id="@+id/Onemoregame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="再来一局"
        android:onClick="Onemoregame"
        android:layout_below="@+id/action_settings"
        android:background="#998c8d88"
        />
    <Button
        android:id="@+id/quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出"
        android:onClick="Quit"
        android:layout_below="@+id/Onemoregame"
        android:layout_marginTop="10dp"
        android:background="#998c8d88"
        />
</RelativeLayout>
